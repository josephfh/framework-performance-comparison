{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "cSpell.words": ["astro", "astrojs", "clsx", "Nuxt", "nuxtjs", "tailwindcss"],
  "prettier.documentSelectors": ["**/*.astro", "**/*.svelte", "**/*.vue"],
  "[astro]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 2
  },
  "editor.fontLigatures": true
}
